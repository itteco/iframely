#!/bin/ash -e

PROCESS=
CMD_ARGS=
CMD=

ApplicationUsage () {
  echo "usage: application [ serve | help | -- COMMAND ]"
}

ApplicationParseOpts () {
  PROCESS=$1
  shift
  CMD_ARGS=$*
}

ApplicationRun () {
  CMD=
  if [ "$PROCESS" = "help" ] ; then
    ApplicationUsage
    exit
  elif [ "$PROCESS" = "--" ] ; then
    CMD=
  elif [ "$PROCESS" = "serve" ] ; then
    CMD="docker/entrypoint.sh"
  else
    CMD="npm run-script $PROCESS"
  fi

  $CMD $CMD_ARGS
}

ApplicationParseOpts $*
ApplicationRun
